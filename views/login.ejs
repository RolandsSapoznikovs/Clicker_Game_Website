  <main id="login">
    <div class="domwal">
      <div class="loginbox">
        <h2> LOGIN </h2>
        <form action="/login" id="loginform" method="post">
          <% if (registerResponse.status == "error") { %>
            <div>
                <div>
                    <h4><%= registerResponse.error %></h4>
                </div>
            </div>
        <% } %>
          <div>
            <label for="regemailinp"><p id="mailid"> Email </p></label>
            <input type="email" name="regemailinp" id="regemailinp" required>
          </div>
          <div>
            <label for="regparoleinp"><p id="passwordid"> Password <span> <input type="checkbox" onclick="spfunc()"> Show Password </span> </p></label>
            <input type="password" name="regparoleinp" id="regparoleinp" required>
          </div>
          <div>
            <input type="submit" id="regbut" value="LOGIN"></button>
          </div>
        </form>
        <form action="/register" id="signinform">
          <button id="regbutfa"> SIGN UP </button>
        </form>
      </div>
    </div>
  </main>
  <script src="script.js"></script>
</body>
